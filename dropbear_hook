run_hook() {
    mkdir -p /dev/pts/
    mount -t devpts devpts /dev/pts/

    /usr/bin/dropbear -Esjk -p 53135 -r /etc/dropbear/dropbear_ed25519_host_key
}

run_cleanuphook() {
    umount /dev/pts/
    rm -r /dev/pts/
    if [[ -f /var/run/dropbear.pid ]]; then
        kill "$(cat /var/run/dropbear.pid)"
    fi
}
